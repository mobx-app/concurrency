{
  "compilerOptions": {
    "target": "ES5",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "declaration": true,
    "noImplicitReturns": true,
    "noImplicitUseStrict": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "downlevelIteration": true,
    "removeComments": false,
    "sourceMap": false,
    "outDir": "lib",
    "lib": [
      "DOM",
      "ES5",
      "ESNext"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "test",
    "lib"
  ]
}
